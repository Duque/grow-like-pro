.row
	.col-xs-12
		//Active growings panel
		.row
			.col-xs-6
				h2 Active growings
			.col-xs-6.text-right
				.btn-group(role="group")
					button.btn.btn-default(aria-label="Left Align") 
						span.glyphicon.glyphicon-plus-sign(aria-hidden="true") 
						| &nbsp; New grow
.row
	each cultivosActivos in [1, 2, 3, 4]
		.col-xs-12.col-sm-6.col-md-4.col-lg-3
			.panel.panel-primary= cultivosActivos
				.panel-heading
					.row
						.col-xs-12
							h4 White Widow november 2016

						.col-xs-12
							span.label.label-default Indoor
							| &nbsp;
							span.label.label-default Cutting
							| &nbsp;
							span.label.label-default 18 plants
							span.badge.pull-right 2 alerts

				.panel-body
					.row
						.col-xs-12
							p
								span.label.label-info Growing
								| &nbsp;
								span.label.label-warning Blooming
								button.btn.btn-xs.btn-success.pull-right(aria-label="Left Align") White Widow Wiki
							p
								.progress
									.progress-bar.progress-bar-info.progress-bar-striped(style="width:30%")
									.progress-bar.progress-bar-warning.progress-bar-striped(style="width:20%")
									span.pull-right 8 weeks &nbsp;

							button.btn.btn-xs.btn-primary(aria-label="Left Align") Finalizar cultivo y archivar
							button.btn.btn-xs.btn-danger.pull-right(aria-label="Left Align") 
								span.glyphicon.glyphicon-trash(aria-hidden="true")
	.col-xs-12			
		.text-right
			button.btn.btn-info(role="button", data-toggle="collapse", href="#collapseGrowingHistory", aria-expanded="false", aria-controls="collapseGrowingHistory") Grow history

.row
	.col-xs-12
		.collapse.panel.panel-default#collapseGrowingHistory
			.panel-heading
				h4 Grow history
			.panel-body
				table.table.table-striped.table-hover
					thead
						tr
							td Grow name (Go to)
							td Type
							td # Plants
							td(colspan="2") Start date

					tbody
						each cultivosActivos in [1, 2, 3, 4]
							tr= cultivosActivos
								td
									button.btn.btn-primary S.A.D. I 2015 &nbsp;

								td Indoor
								td 10
								td 2016/1/7
								td.text-right
									button.btn.btn-xs.btn-danger(aria-label="Left Align") 
										span.glyphicon.glyphicon-trash(aria-hidden="true")